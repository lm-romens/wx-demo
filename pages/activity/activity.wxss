.fliter-flex{
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  width: 100%;
  line-height: 80rpx;
  padding: 0 10rpx;
  background: #fff;
  border-bottom: 1rpx solid #ddd;  
  position: relative;
}
.fliter-flex text{
  flex: 1;
  text-align: center;
  font-size: 30rpx;
}
.fliter-flex text:after{
  content: " ";
  display: inline-block;
  vertical-align: 4rpx;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid #ddd; 
  margin-left: 8rpx;
}
.active{
  color: #fabf7b;
}
.fliter-flex.sort-tab text.active::after{
  border-top: 12rpx solid #fabf7b;
}
.container-body{
  flex: 1;
  overflow-x: auto;
  overflow-y: hidden;
}

.conference-item{
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.conference-item-img{
  width: 100%;
  height: 360rpx;
  position: relative;
  overflow: hidden;
}
.conference-item-img text{
  position: absolute;
  right: 0;
  top: 0;
  background: #07b5e5;
  color: #fff;
  font-size: 32rpx;
  padding: 6rpx 20rpx;
}
.conference-item-img image{
  width: 100%;
  height: 100%;
} 